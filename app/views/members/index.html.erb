<h1>管理會員</h1>
<br \>
<ul>
<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>會員姓名</th>
    <th>身分證字號</th>
    <th>Email</th>
    <th>電話</th>
  </tr>
  <% @members.each do |member| %>
  <tr>
      <td><%= member.name %></td>
      <td><%= member.memberIdNumber %></td>
      <td><%= member.email %></td>
      <td><%= member.phone %></td>
    <td>
      <%= link_to '編輯', edit_member_path(member), :class => "btn btn-primary" %>
    </td>
    <td>
      <%= link_to '刪除', member_path(member), :method => :delete, :class => "btn btn-danger", :data => { :confirm => "你確定要刪除嗎" %>
    </td>
  </tr>
  <% end %>

</table>
</ul>

<%= link_to '新增會員', new_member_path, :class => "btn btn-info"  %>
<br \>
<%= paginate @members %>