<div class="col-sm-8">
  <%= bootstrap_form_for(setup_prescription(@prescription), layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>
    <h1>申請處方箋</h1>
    <% if current_user.auth == 'nurse' %>
      <%= render :partial => 'nurse_form', :locals => { :f => f } %>
    <% else %>
      <%= render :partial => 'customer_form', :locals => { :f => f } %>
    <% end %>
    <%= f.submit "建立", class: "btn btn-primary" %>
    <%= link_to "取消", prescriptions_path, :class => "btn btn-default" %>
  <% end %>
</div>
