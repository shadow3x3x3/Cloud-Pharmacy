<%= bootstrap_form_for(@prescription, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>
  <h1>新增處方箋資料</h1>
  <%= f.number_field :days, :min => 0, label: "天數" %>
  <%= f.number_field :deliveryTimes, :min => 0, label: "外送次數" %>


  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= f.submit "建立", class: "btn btn-primary" %>
  <%= link_to "取消", prescriptions_path, :class => "btn btn-default" %>

<% end %>