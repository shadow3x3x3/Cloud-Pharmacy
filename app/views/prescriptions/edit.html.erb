<%= bootstrap_form_for(@prescription, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>
  <h1>編輯處方箋資料</h1>

  <div class="form-group"><label class="control-label required col-sm-1">姓名</label>
    <div class="col-sm-4">
      <input placeholder=<%= identityCheckName(@prescription) %> disabled="disabled" class="form-control" />
    </div>
  </div>

  <div class="form-group"><label class="control-label required col-sm-1">分類</label>
    <div class="col-sm-4">
      <input placeholder=<%= identityCheck(@prescription) %> disabled="disabled" class="form-control" />
    </div>
  </div>

  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= f.submit "更新", class: "btn btn-default btn-primary" %>
  <%= link_to "取消", prescriptions_path, :class => "btn btn-default" %>

<% end %>