<h2>忘記你的密碼？</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, label: "Email" %>

  <div class="actions">
    <%= f.submit "寄給我重設密碼認證信" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
