<h2>更改您的密碼</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, autocomplete: "off", label: "密碼",
                       help: "至少需要 #{@minimum_password_length.to_s} 個字元"  %>
  <%= f.password_field :password_confirmation, autocomplete: "off", label: "確認密碼" %>

  <div class="actions">
    <%= f.submit "更改我的密碼", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
