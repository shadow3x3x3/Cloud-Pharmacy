<h2>登入</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name),
  layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>

  <%= f.email_field :email, autofocus: true, label: "Email" %>

  <%= f.password_field :password, autocomplete: "off", label: "密碼" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, label: "記得我" %>
  <% end -%>

  <br>

  <%= f.submit "登入", class: "btn btn-primary" %>
  <%= render "devise/shared/links" %>
<% end %>




