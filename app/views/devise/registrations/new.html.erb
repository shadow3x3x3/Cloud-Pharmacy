<h2>註冊帳號</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, label: "Email" %>

  <%= f.password_field :password, autocomplete: "off", label: "密碼",
                       help: "至少需要 #{@minimum_password_length.to_s} 個字元"  %>
  <%= f.password_field :password_confirmation, autocomplete: "off", label: "確認密碼" %>

  <%= f.submit "註冊", class: "btn btn-primary btn-lg" %>

<% end %>
<br />

<%= render "devise/shared/links" %>
