<h2>重送解鎖信件</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, label: "Email" %>

  <%= f.submit "重送解鎖信件" %>
<% end %>

<%= render "devise/shared/links" %>
