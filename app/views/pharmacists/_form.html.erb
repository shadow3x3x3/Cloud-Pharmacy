<div class="control-group">
  <%= f.label :name, "姓名", class: "control-label text-center" %>
  <div class="controls">
    <%= f.text_field :name %>
  </div>
</div>

<div class="control-group">
  <%= f.label :salary, "薪水", class: "control-label text-center" %>
  <div class="controls">
    <%= f.number_field :salary, :min => 0 %>
  </div>
</div>

<div class="control-group">
  <%= f.label :deliveryTimes, "外送次數", class: "control-label text-center" %>
  <div class="controls">
    <%= f.number_field :deliveryTimes, :min => 0 %>
  </div>
</div>

<div class="control-group">
  <%= f.label :remark, "備註", class: "control-label text-center" %>
  <div class="controls">
    <%= f.text_area :remark, :size => "20x5" %>
  </div>
</div>

<br />

<% if @pharmacist.errors.any? %>
  <ul>
  <% @pharmacist.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
  <% end %>
  </ul>
<% end %>