<%= bootstrap_form_for @hospital, :url => hospital_path(@hospital),
                       :method => :patch do |f| %>
  <h1>編輯醫院資料</h1>

  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= f.submit "更新", class: "btn btn-primary" %>
  <%= link_to "取消", hospitals_path, :class => "btn btn-default" %>

<% end %>